{
  "$schema": "https://github.com/Azure/data-api-builder/releases/download/v1.1.7/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "@env('DATABASE_CONNECTION_STRING')",
    "options": {
      "set-session-context": false
    }
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/rest",
      "request-body-strict": true
    },
    "graphql": {
      "enabled": true,
      "path": "/graphql",
      "allow-introspection": true
    },
    "host": {
      "cors": {
        "origins": [],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      },
      "mode": "production"
    }
  },
  "entities": {
    "AddBook": {
      "source": {
        "object": "sp_AddBook",
        "type": "stored-procedure",
        "parameters": {
          "Title": "s",
          "Author": "s",
          "Genre": "s",
          "ReadStatus": "b",
          "Description": "s"
        }
      },
      "rest": {
        "enabled": true,
        "methods": ["post"]
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [{ "action": "execute" }]
        }
      ]
    },
    "UpdateBook": {
      "source": {
        "object": "sp_UpdateBook",
        "type": "stored-procedure",
        "parameters": {
          "BookID": "i",
          "Title": "s",
          "Author": "s",
          "Genre": "s",
          "ReadStatus": "b",
          "Description": "s"
        }
      },
      "rest": {
        "enabled": true,
        "methods": ["post"]
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [{ "action": "execute" }]
        }
      ]
    },
    "DeleteBook": {
      "source": {
        "object": "sp_DeleteBook",
        "type": "stored-procedure",
        "parameters": {
          "BookID": "i"
        }
      },
      "rest": {
        "enabled": true,
        "methods": ["post"]
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [{ "action": "execute" }]
        }
      ]
    },
    "GetBookByID": {
      "source": {
        "object": "sp_GetBookByID",
        "type": "stored-procedure",
        "parameters": {
          "BookID": "i"
        }
      },
      "rest": {
        "enabled": true,
        "methods": ["get"]
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [{ "action": "execute" }]
        }
      ]
    },
    "GetAllBooks": {
      "source": {
        "object": "sp_GetAllBooks",
        "type": "stored-procedure"
      },
      "rest": {
        "enabled": true,
        "methods": ["get"]
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [{ "action": "execute" }]
        }
      ]
    }
  }
}
